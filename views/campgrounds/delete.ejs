<%- layout("layouts/boilerplate.ejs") %>
    <h1>
        <%=campground.name%>
    </h1>
    <hr>
    <p>Are you sure you want to delete this campground?</p>
    <ul>
        <li>Location:
            <%=campground.location%>
        </li>
        <li>Price:
            <%=campground.price%>
        </li>
        <li>Description:
            <%=campground.description%>
        </li>
    </ul>
    <form action="/campgrounds/delete/<%=campground.id%>?_method=DELETE" method="POST">
        <button class="btn btn-success">Delete</button>
        <a href="/campgrounds/<%=campground.id%>"><button type="button"
                class="btn btn-outline-danger">Cancel</button></a>
    </form>