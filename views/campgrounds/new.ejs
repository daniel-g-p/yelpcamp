<%- layout("layouts/boilerplate.ejs") %>
    <h1>New Campground</h1>
    <hr>
    <form action="/campgrounds" method="POST">
        <div class="container">
            <div class="row">
                <div class="mb-3 col-12 col-lg-5">
                    <label for="name" class="form-label fw-bold">Campground Name</label>
                    <input type="text" name="cg[name]" id="name" class="form-control" placeholder="Fancy Campground">
                </div>
                <div class="mb-3 col-12 col-lg-5">
                    <label for="location" class="form-label fw-bold">Location</label>
                    <input type="text" name="cg[location]" id="location" class="form-control" placeholder="New York">
                </div>
                <div class="mb-3 col-12 col-lg-2">
                    <label for="exampleFormControlInput1" class="form-label fw-bold">Price</label>
                    <div class="input-group mb-3">
                        <span class="input-group-text">$</span>
                        <input type="text" class="form-control" aria-label="Amount" id="price" placeholder="0.00">
                    </div>
                </div>
                <div class="mb-3 col-12">
                    <label for="description" class="form-label fw-bold">Description</label>
                    <textarea class="form-control" rows="3" name="cg[description]" id="description" class="form-control" placeholder="A crisp Headline about this Campground..."></textarea>
                </div>
            </div>
        </div>
        <button class="btn btn-success">Create</button>
        <a href="/campgrounds/" class="btn btn-outline-danger">Cancel</a>
    </form>