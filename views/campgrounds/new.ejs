<%- layout("layouts/boilerplate.ejs") %>
    <h1>New Campground</h1>
    <hr>
    <form action="/campgrounds" method="POST">
        <div>
            <label for="name">Name: </label>
            <input type="text" name="cg[name]" id="name">
        </div>
        <div>
            <label for="location">Location: </label>
            <input type="text" name="cg[location]" id="location">
        </div>
        <div>
            <label for="description">Description: </label>
            <input type="text" name="cg[description]" id="description">
        </div>
        <div>
            <label for="price">Price: </label>
            <input type="number" name="cg[price]" id="price">
        </div>
        <button class="btn btn-success">Create</button>
        <a href="/campgrounds">
            <button class="btn btn-outline-success">Cancel</button>
        </a>
    </form>