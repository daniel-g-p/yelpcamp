<%- layout("layouts/boilerplate.ejs") %>
    <h1>
        Update
        <%=campground.name%>
    </h1>
    <hr>
    <form action="/campgrounds/edit/<%=campground.id%>?_method=PATCH" method="POST" class="needs-validation" novalidate>
        <div class="container">
            <div class="row">
                <div class="mb-3 col-12 col-lg-5">
                    <label for="name" class="form-label fw-bold">Campground Name</label>
                    <input type="text" name="cg[name]" id="name" class="form-control" placeholder="Fancy Campground" value="<%=campground.name%>" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                    <div class="invalid-feedback">
                        Please provide a valid name.
                    </div>
                </div>
                <div class="mb-3 col-12 col-lg-5">
                    <label for="location" class="form-label fw-bold">Location</label>
                    <input type="text" name="cg[location]" id="location" class="form-control" placeholder="New York" value="<%=campground.location%>" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                    <div class="invalid-feedback">
                        Please provide a valid location.
                    </div>
                </div>
                <div class="mb-3 col-12 col-lg-2">
                    <label for="exampleFormControlInput1" class="form-label fw-bold">Price</label>
                    <div class="input-group">
                        <span class="input-group-text">$</span>
                        <input type="text" class="form-control" aria-label="Amount" name="cg[price]" id="price" placeholder="0.00" value="<%=campground.price%>" required>
                    </div>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                    <div class="invalid-feedback">
                        Please provide a valid price.
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="mb-3 col-12">
                    <label for="image" class="form-label fw-bold">Image URL</label>
                    <input type="url" name="cg[image]" id="image" class="form-control" placeholder="https://www.mypicture.com" value="<%=campground.image%>" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                    <div class="invalid-feedback">
                        Please provide a valid image URL.
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="mb-3 col-12">
                    <label for="description" class="form-label fw-bold">Description</label>
                    <textarea class="form-control" rows="3" name="cg[description]" id="description" class="form-control" placeholder="A crisp Headline about this Campground..." required><%=campground.description%></textarea>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                    <div class="invalid-feedback">
                        Please provide a valid description.
                    </div>
                </div>
            </div>
        </div>
        <button class="btn btn-success">Update</button>
        <a href="/campgrounds/" class="btn btn-outline-danger">Cancel</a>
    </form>
